<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16sp"
        android:layout_marginBottom="1dp"
        android:background="@color/backgroundList"
        >
           <TextView
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="46dp"
                android:text="2021-08-29"
                android:textSize="16sp"
                android:padding="2dp"
                android:textStyle="bold"
               android:textColor="@color/fontList"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        <TextView
            android:id="@+id/txtTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0"

            android:padding="2dp"
            android:text="VITALSPORT Décathlon équipe démo Villeneuve Ascq et Noyelles-Godault"
            android:textColor="@color/fontList"
            android:textSize="16sp"
            app:drawableRightCompat="@drawable/ic_baseline_arrow_back_24"
            app:layout_constraintStart_toEndOf="@+id/txtDate"
            app:layout_constraintTop_toTopOf="parent" />




    </LinearLayout>
</layout>